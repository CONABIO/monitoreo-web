{
  "name": "conabio",
  "version": "1.0.0",
  "scripts": {
    "dev": "tarima -de -p 3001",
    "dist": "tarima -fqe production",
    "dist:deploy": "yarn dist && bin/deploy"
  },
  "tarima": {
    "src": "src",
    "public": "build",
    "watch": [
      ".env",
      "package.json"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "bundle": [
      "**/index.js"
    ],
    "rename": [
      "**:{fullpath/1}",
      "**/index.(css|js):{basedir}.{ext}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "plugins": [
      "talavera"
    ],
    "pluginOptions": {
      "talavera": {
        "dest": "images",
        "public": "dist"
      }
    },
    "bundleOptions": {
      "bundleCache": true,
      "entryCache": true,
      "extensions": {
        "js": "es6",
        "css": "less"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "buble": "^0.15.2",
    "less": "^2.7.2",
    "less-plugin-autoprefix": "^1.5.1",
    "node-sass": "^4.5.3",
    "pug": "^2.0.0-rc.1",
    "rollup": "^0.41.6",
    "talavera": "^0.4.0",
    "tarima": "^3.6.1"
  },
  "optionalDependencies": {
    "chokidar": "^1.7.0",
    "node-notifier": "^5.1.2",
    "tarima-lr": "^0.3.2"
  }
}
